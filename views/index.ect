<html>
    <head>
        <meta charset="utf-8">

        <link rel="stylesheet" href="/dropzone.css">
        <link rel="stylesheet" href="/style.css">

        <script src="/dropzone.js"></script>

        <title>UXperiment</title>
    </head>
    <body>
        <h1>Get feedback on your UX prototypes with ease</h1>

        <form action="/upload" class="dropzone" id="dropzone"></form>

        <script>
            Dropzone.options.dropzone = {
              init: function() {
                this.on("success", function(file, id) {
                    window.location = '/experiment/' + id;
                });
              }
            };
        </script>
    </body>
</html>